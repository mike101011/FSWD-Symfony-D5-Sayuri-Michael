{% extends 'base.html.twig' %}

{% block title %}Rooms index
{% endblock %}

{% block body %}
	<a href="/logout">
		LOG OUT
	</a>

	<h1>Rooms index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Bed_number</th>
				<th>Description</th>
				<th>Price</th>
				<th>Status</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for room in rooms %}
				<tr>
					<td>{{ room.id }}</td>
					<td>{{ room.bedNumber }}</td>
					<td>{{ room.description }}</td>
					<td>{{ room.price }}</td>
					<td>{{ room.fkStatus.name }}</td>
					<td>
						<a href="{{ path('rooms_show', {'id': room.id}) }}">show</a>
						<a href="{{ path('rooms_edit', {'id': room.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('rooms_new') }}">Create new</a>
{% endblock %}
